<% include ../partials/header %>
 <div class="container">
   <header class="jumbotron">
     <div>
     <h2>Welcome To Code-Blog</h2>
     <p>View our blog form all over the world</p>
     <p>
       <a  class=" btn btn-primary btn-lg" href="/blogs/new"><i class="fas fa-plus-circle"></i> Add New Blog</a>
     </p>
     </div>
     </header>
   
<div class="row text-center" style="display:flex; flex-wrap:wrap;">   
<% blogs.forEach(blogs=>{ %>
<div class="col-md-3 col-sm-6">
  <div class="thumbnail">
    <img src="<%= blogs.image %>">
    <div class="caption">
      <h4><%= blogs.name %></h4>
      <a href="/blogs/<%= blogs._id %>" class="btn btn-primary"><i class="fas fa-info-circle"></i> More Info</a>
    </div>
  </div>
</div>

<% }) %>
</div>
</div>

<% include ../partials/footer %>
