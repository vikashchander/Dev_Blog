<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead"><i class="fas fa-code"></i> Code <i class="fas fa-terminal"></i> Blog</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img src="<%= blogs.image %>">
                <div class="caption-full">
                    <h4><a><%=blogs.name%></a></h4>
                    <p><%= blogs.description %></p>
                    <p>
                        <em> Written By <i class="fas fa-pen-fancy"></i> <strong><%= blogs.author.username %></strong></em>
                    </p>
                <% if( currentUser && blogs.author.id.equals(currentUser._id)){ %>
                    <a class="btn btn-warning" href="/blogs/<%=blogs._id%>/edit"><i class="fas fa-pencil-alt"></i> Edit</a>
                    <form id="form-delete" action="/blogs/<%= blogs._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger"><i class="fas fa-trash"></i> DELETE</button>
                    </form>
                 <%  } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-primary" href="/blogs/<%=blogs._id %>/comments/new"><i class="fas fa-comments"></i> Add New Comment</a>
                </div>
                <hr>
                <% blogs.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %> 
                            </p>
                           
                          <!--<a class="btn btn-xs btn-warning" href="/blogs/<%=blogs._id%>/comments/<%=comment._id%>/edit">Edit</a>-->
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>
