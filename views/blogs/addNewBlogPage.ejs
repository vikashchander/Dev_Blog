<% include ../partials/header%>
<div class="container">
    <div class="row">
     <h2 class="text-center">Create A New Code <i class="fas fa-terminal"></i> Blog </h2>
     <div style="width:30%; margin :25px auto;">
     <form action ="/blogs" method="POST"> 
     <div class="form-group">
         <input class="form-control" type="text" name="name" placeholder="Blog Heading*" required>
     </div>
     <div class="form-group">
         <input class="form-control" type="text" name="image" placeholder="Image Url*" required>
     </div>
     <div class="form-group">
         <textarea  class="form-control" rows="10" type="text" name="description" placeholder="Blog Description*" required ></textarea>
     </div>
     <div class="form-group">
       <button id="addButton" class="btn btn-lg btn-primary btn-block"><i class="fas fa-plus-circle"></i> ADD</button>
     </div>
</form>
    
       <a href="/blogs"><i class="fas fa-arrow-alt-circle-left fa-3x"></i></a>
    </div>
     
   </div>
 </div>
 </div>
