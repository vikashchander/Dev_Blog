<% include ../partials/header%>
<div class="container">
    <div class="row">
     <h2 class="text-center"><i class="fas fa-pen-fancy"></i> Edit <%= editBlog.name %> Blog</h2>
     <div style="width:30%; margin :25px auto;">
     <form action ="/blogs/<%= editBlog._id %>?_method=PUT" method="POST"> 
     <div class="form-group">
         <input class="form-control" type="text" name="blogs[name]" value="<%= editBlog.name %>">
     </div>
     <div class="form-group">
         <input class="form-control" type="text" name="blogs[image]"  value="<%= editBlog.image %>">
     </div>
     <div class="form-group">
         <textarea class="form-control" name="blogs[description]"><%- editBlog.description %></textarea>
     </div>
    <div class="form-group">
    <button class="btn btn-lg btn-primary btn-block"><i class="fas fa-wrench"></i> Update</button>
    </div>
</form>
    <a href="/blogs"><i class="fas fa-arrow-alt-circle-left fa-2x"></i> Go Back</a>
    </div>
     
   </div>
 </div>
 </div>
<% include ../partials/footer %>